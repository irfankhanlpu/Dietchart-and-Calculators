<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@mipmap/nutrition"
    tools:context="com.irfan.dietchart.FifthActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="In case you suffer from any desiese"
        android:textSize="30dp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:layout_gravity="center"

        android:fontFamily="times new roman"
        />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:background="@drawable/button"
        android:layout_margin="20dp"
        android:text="CVD AND HYPERTENTION"
        android:id="@+id/btn1"
        android:textColor="@android:color/white"
        android:fontFamily="times new roman"/>

    <Button
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_margin="20dp"
        android:background="@drawable/signup"
        android:text="CVD AND DIABETES"
        android:id="@+id/btn2"
        android:textColor="@android:color/black"

        android:fontFamily="times new roman"/>
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:id="@+id/btn3"
        android:background="@drawable/button"
        android:text="NORMAL"
        android:textColor="@android:color/white"
        android:fontFamily="times new roman"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" note:-- In order to maintain your health you must follow the diet chart properly and take appropriate precaution."
        android:textSize="20dp"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:fontFamily="times new roman"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="@android:color/holo_red_dark"/>
</LinearLayout>
