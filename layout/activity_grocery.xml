<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/nutrition"
    android:layout_height="match_parent"
    tools:context="com.irfan.dietchart.GroceryActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:fontFamily="times new roman"
        android:layout_margin="20dp"
        android:text="If you're going to bulk up,lost fat, or stay healthy, you'll also need a goal-specified meal plan to get results. You will need to eat more starchy carbs and fewer fats before and after workout or promote energy and muscle growth." />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:fontFamily="times new roman"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_margin="20dp"
            android:text="1. Starches" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:fontFamily="times new roman"
            android:layout_margin="20dp"
            android:text="Brown rice ,Quinoa,yams, Potatoes , Oats , whole - whaeat pastas, bread ,cereals , wraps." />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:fontFamily="times new roman"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_margin="20dp"
            android:text="2. Protein" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:fontFamily="times new roman"
            android:layout_margin="20dp"
            android:text="Protein powders , egg whites, whole eggs ,white meat , white fish, greek yogurt." />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:fontFamily="times new roman"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_margin="20dp"
            android:text="3. Fruits/Vegetable /legumes" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:fontFamily="times new roman"
            android:layout_margin="20dp"
            android:text="Tropical fruits ,green/ fibrous vegetables,beans." />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:fontFamily="times new roman"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_margin="20dp"
            android:text="4. Oils" />
        <TextView
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:fontFamily="times new roman"
            android:layout_margin="20dp"
            android:text="Use sparingly,think teaspoons,not tablespoons.
                            For meal not containing starchy carbohydrate." />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:fontFamily="times new roman"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_margin="20dp"
            android:text="5. Fruits/Vegetable /Legumes" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:fontFamily="times new roman"
            android:layout_margin="20dp"
            android:text="Barees, green/fibrous, beans" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:fontFamily="times new roman"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_margin="20dp"
            android:text="6. Oils/Fats" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:fontFamily="times new roman"
            android:layout_margin="20dp"
            android:text="Tablespoons ,not teaspoons, avocados,nuts/seeds , coconut oil ,canola, full fat cheeses." />

    </LinearLayout>

    </ScrollView>
</LinearLayout>
