                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textColor="@android:color/black"
                android:fontFamily="times new roman"
                android:textSize="15dp"

              android:layout_gravity="center"
                android:text="This is my last bulking plan. It may not work perfectly for you, so feel free to eat more , less or even substitute foods, but keep the emphasis on frequent protein ,quality calorie and ample carbohydrate. Try it out , and good luck with your gain! "/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textStyle="bold"
                android:fontFamily="times new roman"
                android:textColor="@android:color/black"
                android:text="Meal 1"
                android:layout_margin="15dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:fontFamily="times new roman"
                android:layout_margin="15dp"
