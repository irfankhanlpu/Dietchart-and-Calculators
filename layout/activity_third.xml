<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/nutrition"
    tools:context="com.irfan.dietchart.ThirdActivity"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">\

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="times new roman"

                android:text="Early Morning 6-7 am"
                android:background="@android:color/holo_orange_light"
                android:layout_margin="20dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:fontFamily="times new roman"
                android:text="Skim milk -1 cup(200ml)/Coconut water -1 glass(200ml) +marie biscuits/High fibre biscuit."
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Breakfast 8-9 am"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:background="@android:color/holo_orange_light"
                android:layout_margin="10dp"
                android:textSize="15dp"
                android:fontFamily="times new roman"
                android:gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="times new roman"
                android:textSize="15dp"
                android:text="Stuffed roti -2 +curd -1 serving/Brown bread vegetable sandwich -2 slices /boiled egg white with toasted bread -2 slices +sprouts -1 serving(vegetable oil not more than 5 ml) "
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mid Morning 11-12 am"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:background="@android:color/holo_orange_light"
                android:layout_margin="10dp"
                android:textSize="15dp"
                android:fontFamily="times new roman"
                android:gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="times new roman"
                android:textSize="15dp"
                android:text="Butter milk(skim milk used)/Lemon water + fruits -2 servings(150gm)."
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content"
                android:text="Lunch (1-2 pm)"
                android:background="@android:color/holo_orange_light"
                android:layout_margin="10dp"
                android:textSize="15dp"
                android:fontFamily="times new roman"
                android:gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="times new roman"
                android:textSize="15dp"
                android:text="Roti -2/vegetable palao-50gms +Soyabeen/Dal/Boiled chicken(30gm)+Seasonal vegetable -1 serving(100gm)+curd -1 serving(100gms)+ salad -liberal amounts(Before meal)."
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Evening(4-5 pm)"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:background="@android:color/holo_orange_light"
                android:layout_margin="10dp"
                android:textSize="15dp"
                android:fontFamily="times new roman"
                android:gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="times new roman"
                android:textSize="15dp"
                android:text="Cornflakes/Dalia/Oats-30gm + Milk -1 cup(200ml) + marie/suji rusk -2."
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Evening Soup(6-7 pm)"
                android:background="@android:color/holo_orange_light"
                android:layout_margin="10dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:fontFamily="times new roman"
                android:gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="times new roman"
                android:textSize="15dp"
                android:text="Homemade soup(no fat/ no oil)/Cocont water + fruit -1 serving."
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dinner(8-9 pm)"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:background="@android:color/holo_orange_light"
                android:layout_margin="10dp"
                android:textSize="15dp"
                android:fontFamily="times new roman"
                android:gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="times new roman"
                android:textSize="15dp"
                android:text="Roti-2/vegetable Khichdi/Veg.Dalia +Soyabean/Dal/Boiled Chicken(30gm) +Seasonal vegetable -1 serving(100gm) + Dessert like kheer /custard (made with skim milk)."
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bedtime(10 pm)"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:background="@android:color/holo_orange_light"
                android:layout_margin="10dp"
                android:textSize="15dp"
                android:fontFamily="times new roman"
                android:gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="times new roman"
                android:textSize="15dp"
                android:text=" skim milk(200ml)."
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
