<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg3"
    tools:context="com.irfan.dietchart.FourthActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="In case of any disease click on the disease name to see the diet chart."
        android:textSize="25dp"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:fontFamily="times new roman"
        />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_margin="10dp"
            android:text="CVD AND HYPERTENTION"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/btn1"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:fontFamily="times new roman"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:text="CVD AND DIABETES"
        android:id="@+id/btn2"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/white"
        android:fontFamily="times new roman"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:id="@+id/btn3"
        android:text="NORMAL"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/white"
        android:fontFamily="times new roman"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tips:-- In order to maintain your health you must follow the diet chart properly and take appropriate precaution."
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:fontFamily="times new roman"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="@android:color/holo_red_dark"/>

</LinearLayout>
